<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UcabGo.App.Shells.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UcabGo.App"
    FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="RolTab" Route="Main">
            <ShellContent
                Title="RolShell"
                ContentTemplate="{DataTemplate local:Views.RoleSelectionView}"
                Route="RoleSelectionView" />
        </Tab>
        <Tab Title="Rol2Tab" Route="Main2">
            <ShellContent
                Title="Rol2Shell"
                ContentTemplate="{DataTemplate local:Views.RoleSelectionView}"
                Route="RoleSelectionView2" />
        </Tab>
    </TabBar>

</Shell>
